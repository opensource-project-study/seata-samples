<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.seata.samples.integration.business.stock.dao.StockMapper">

    <resultMap id="BaseResultMap" type="io.seata.samples.integration.business.common.bean.Stock">
        <id column="id" property="id"/>
        <result column="commodity_code" property="commodityCode"/>
        <result column="name" property="name"/>
        <result column="count" property="count"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, commodity_code, name, count
    </sql>

    <select id="queryStockByUniqueKey" resultType="java.lang.Integer">
        SELECT count from stock where commodity_code = #{commodityCode} FOR UPDATE
    </select>

    <update id="decreaseStock">
        update stock
        set count = count - ${count}
        where commodity_code = #{commodityCode}
    </update>

</mapper>
