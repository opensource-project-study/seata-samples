<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.seata.samples.integration.business.stock.dao.StockMapper">

    <resultMap id="BaseResultMap" type="io.seata.samples.integration.business.common.bean.Stock">
        <id column="id" property="id"/>
        <result column="commodity_code" property="commodityCode"/>
        <result column="name" property="name"/>
        <result column="count" property="count"/>
        <result column="frozen_count" property="frozenCount" />
    </resultMap>

    <sql id="Base_Column_List">
        id, commodity_code, `name`, `count`, frozen_count
    </sql>

    <select id="getByUniqueKey" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/> from stock where commodity_code = #{commodityCode} FOR UPDATE
    </select>

    <update id="updateFrozenCount">
        UPDATE stock
        SET frozen_count=frozen_count+#{cnt}
        WHERE commodity_code = #{commodityCode}
    </update>

    <update id="update">
        UPDATE stock
        SET `count`=`count`-#{cnt},
            frozen_count=frozen_count-#{cnt}
        WHERE commodity_code = #{commodityCode}
    </update>

    <update id="decreaseStock">
        update stock
        set count = count - #{cnt}
        where commodity_code = #{commodityCode}
    </update>

</mapper>
