<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.seata.samples.integration.business.order.dao.OrderMapper">

    <resultMap id="BaseResultMap" type="io.seata.samples.integration.business.common.bean.Order">
        <id column="id" property="id"/>
        <result column="order_no" property="orderNo"/>
        <result column="order_status" property="orderStatus" />
        <result column="user_id" property="userId"/>
        <result column="commodity_code" property="commodityCode"/>
        <result column="count" property="count"/>
        <result column="amount" property="amount"/>
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <sql id="Base_Column_List">
        id, order_no, order_status, user_id, commodity_code, count, amount, created_at, updated_at
    </sql>

    <select id="getByOrderNo" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM `order`
        WHERE order_no=#{orderNo}
        FOR UPDATE
    </select>

    <!-- order是MySQL中的一个关键字，需要用反引号引起来 -->
    <insert id="createOrder" keyProperty="id" useGeneratedKeys="true"
            parameterType="io.seata.samples.integration.business.common.bean.Order">
        insert into `order`
        (order_no, order_status, user_id, commodity_code, count, amount)
        values
        (#{orderNo}, #{orderStatus}, #{userId}, #{commodityCode}, #{count}, #{amount})
    </insert>

    <update id="updateOrderStatus">
        UPDATE `order`
        SET order_status=#{newStatus}
        WHERE order_no=#{orderNo} AND order_status=#{oldStatus}
    </update>

</mapper>
